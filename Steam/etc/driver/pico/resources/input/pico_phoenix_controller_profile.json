{
  "jsonid": "input_profile",
  "controller_type": "pico_controller",
  "device_class": "TrackedDeviceClass_Controller",
  "resource_root": "pico",
  "driver_name": "pico",
  "legacy_binding": "{pico}/input/legacy_bindings_pico_controller.json",
  "input_bindingui_mode": "controller_handed",
  "should_show_binding_errors": true,
  "compatibility_mode_controller_type": "oculus_touch",
  "input_bindingui_left": {
    "image": "{pico}/icons/phoenix_controller_left.svg"
  },
  "input_bindingui_right": {
    "image": "{pico}/icons/phoenix_controller_right.svg"
  },
  "input_source": {
    "/input/joystick": {
      "type": "joystick",
      "binding_image_point": [42, 3  ],
      "click": true,
      "touch": true,
      "order": 2
    },
    "/input/trigger": {
      "type": "trigger",
      "binding_image_point": [ 37, 0 ],
      "value": true,
      "touch": true,
      "order": 1
    },
    "/input/grip": {
      "type": "trigger",
      "binding_image_point": [  20, 38 ],
      "value": true,
      "touch": true,
      "order": 3
    },
    "/input/b": {
      "type": "button",
      "side": "right",
      "binding_image_point": [ 20,5 ],
      "click": true,
      "touch": true,
      "order": 4
    },
    "/input/a": {
      "type": "button",
      "side": "right",
      "binding_image_point": [ 27, 20 ],
      "click": true,
      "touch": true,
      "order": 5
    },
    "/input/x": {
      "type": "button",
      "side": "left",
      "binding_image_point": [ 37, 18 ],
      "click": true,
      "touch": true,
      "order": 4
    },
    "/input/y": {
      "type": "button",
      "side": "left",
      "binding_image_point": [ 25, 8 ],
      "click": true,
      "touch": true,
      "order": 5
    },
    "/input/system": {
      "type": "button",
      "side": "left",
      "binding_image_point": [ 55, 18 ],
      "click": true,
      "touch": true,
      "order": 0
    },
    "/input/skeleton/right": {
      "type": "skeleton",
      "side": "right",
      "skeleton": "/skeleton/hand/right",
      "binding_image_point": [ 50, 50 ]
    },
    "/input/skeleton/left": {
      "type": "skeleton",
      "side": "left",
      "skeleton": "/skeleton/hand/left",
      "binding_image_point": [ 50, 50 ]
    },
    "/output/haptic": {
      "type": "vibration",
      "binding_image_point": [ 50, 50 ]
    },
    "/pose/raw": {
      "type": "pose",
      "binding_image_point": [ 50, 50 ]
    },
    "/pose/base": {
      "type": "pose",
      "binding_image_point": [ 50, 50 ]
    },
    "/pose/handgrip": {
      "type": "pose",
      "binding_image_point": [ 50, 50 ]
    },
    "/pose/tip": {
      "type": "pose",
      "binding_image_point": [ 50, 50 ]
    },
    "/pose/openxr_aim": {
      "type": "pose",
      "binding_image_point": [ 50, 50 ]
    }
  },
  "default_bindings": [
    {
      "app_key": "openvr.component.vrcompositor",
      "binding_url": "vrcompositor_bindings_pico.json"
    }
  ]


}
